<section class="wrap">
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="user-text">
      <p class="left"><strong>名前</strong></p>
      <p class="left"><%= @user.name %></p>
      <p class="left"><strong>メール</strong></p>
      <p class="left"><%= @user.email %></p>
    </div>


<div class="list">
    <p class="text"><strong>Followed users list</strong></p>
    <% @user.followed_users.each do |user| %>
    <% user.followed_users %>
    <%= profile_img(user) %>
    <%= user.email %>
    <%= render 'follow_form', user: user %>
  </div>
  <% end %>
  <div class="list">
    <p class="text"><strong>Followers list</strong></p>
    <% @user.followers.each do |user| %>
    <% user.followers %>
    <%= profile_img(user) %>
    <%= user.email %>
    <%= render 'follow_form', user: user %>
  </div>
  <% end %>
</div>
</div>
</section>
