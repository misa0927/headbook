<!DOCTYPE html>
<html>
<head>
  <title>Headbook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <script>
  $(function(){
      reviseMargin();
      function reviseMargin(){
          $(".wrapper").css({
              "margin-bottom": $("footer")[0].offsetHeight + "px"
          });
      }
  });
  </script>
</head>
<body>
  <header>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "headbook",root_path,class:"navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "お問い合わせ",new_contact_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "トピックス",topics_path %></li>
                <li><%= link_to "ユーザー一覧",users_path if user_signed_in? %></li>
                <li><%= link_to "メッセージ", conversations_path %></li>
              </ul>
            </li>
            <% if user_signed_in? %>
            <li><%= link_to 'マイページ',edit_user_registration_path %></li>
            <li><%= link_to 'ログアウト',destroy_user_session_path,method: :delete %></li>
            <% else %>
            <li><%= link_to 'ログイン',new_user_session_path %></li>
            <li><%= link_to 'サインアップ',new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>
</header>

<%= yield %>

<footer>
    <div class="container-fluid">
      <div class="page_footer">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-left">
            <li>日本語</li>
            <li>English(US)</li>
            <li>Portugues(Blasil)</li>
            <li>中文(簡体)</li>
            <li>Tieng Viet</li>
            <li>Espanol</li>
            <li>Bahasa Indonesia</li>
            <li>Korea</li>
            <li>Francais(France)</li>
            <li>Deutsch</li>
            <li>Italiano</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="contentline"></div>

      </div>
          <span class="copy">&copy; 2017 headbook</span>
</footer>

</body>
</html>
